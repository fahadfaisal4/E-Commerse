<section>
    <div class="container">
        <div class="row">
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Tittle</th>
                    <th scope="col">Category</th>
                    <th scope="col">Discription</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px;height: 50px;" src="/images/product-images/{{this._id}}.jpg" alt="">
                    </td>
                    <td><a href="/admin/edit-product/{{this._id}}" class='btn btn-primary'>Edit</a></td>
                    <td><a href="/admin/delete-product?product_id={{this._id}}" class='btn btn-danger' onclick="return confirm('Are you sure want to delete {{this.name}}')">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>